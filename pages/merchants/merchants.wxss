/* pages/merchants/merchants.wxss */
page {
    width: 100%;
    height: 100%;
    background: #eee;
}
.container {
    padding: 0;
}
.merchants {
    display: flex;
    flex-direction: column;
    
    width: 100%;
}
.top {
    text-align: center;
    background: #eee;
    padding: 30rpx 0;
}
.wrapper {
    display: flex;
    padding: 30rpx;
    background: #fff;
    width: 100%;
}
.wrapper image {
    width: 150rpx;
    height: 150rpx;
    border: 1px solid #ccc;
    border-radius: 5rpx;
}
.merchants-info {
    margin-left: 26rpx;
    width: 73%;
}
.nickname {
    font-size:.9rem;
    font-weight:bold;
    display: flex;
    justify-content:space-between;
}
.nickname .distance {
    color: #aaa;
}
.start {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}
.start .month {
    color: #aaa;
    font-size: .8rem;
}